{
  "name": "random-movie-recommendations",
  "version": "0.1.0",
  "main": "index.html",
  "license": "MIT",
  "scripts": {
    "build": "parcel build ./app/index.html",
    "format": "prettier --config=./.prettierrc --write './app/**/*.scss' './app/**/*.tsx' './app/**/*.ts' ./**/*.json ./*.json",
    "lint": "tslint --config ./config/tslint.json --project .",
    "lint:autofix": "tslint --config ./config/tslint.json --fix --project .",
    "lint:sass": "sass-lint --config ./config/sass.yml './app/**/*.scss' -v -q",
    "start": "parcel ./app/index.html",
    "test": "jest --coverage --coverageReporters=lcov --watch",
    "typecheck": "tsc --noEmit"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)spec)\\.(tsx?)$",
    "moduleDirectories": [
      "node_modules",
      "app"
    ],
    "setupFiles": [
      "./config/jest-setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "normalize.css": "^8.0.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-intl": "^2.4.0",
    "style": "^0.0.3"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.11",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.1.2",
    "@types/react": "^16.4.3",
    "@types/react-dom": "^16.0.6",
    "@types/react-intl": "^2.3.8",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^23.2.0",
    "node-sass": "^4.9.0",
    "parcel-bundler": "^1.9.3",
    "prettier": "^1.13.6",
    "prop-types": "^15.6.2",
    "sass-lint": "^1.12.1",
    "source-map-support": "^0.5.6",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2"
  }
}
